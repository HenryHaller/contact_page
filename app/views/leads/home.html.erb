<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-4 text-center">
    <%= simple_form_for(@lead, html: { class: '' }) do |f| %>
     <%= f.input :company, required: true %>
     <%= f.input :first_name, required: true  %>
     <%= f.input :last_name, required: true  %>
     <%= f.input :email, label: "Email", required: true, type: :email  %>
     <%= f.input :introduction, label: "How can we assist you?", required: true  %>
     <%= f.button :submit, value: "Get in Touch", class: 'btn btn-primary submit-button', required: true  %>
   <% end %>
  </div>
</div>
